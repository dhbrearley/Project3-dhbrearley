@model Fall2024_Assignment3_dhbrearley.Models.MovieActor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Manage Movie & Actor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Select Movie</label>
                <select name="MovieId" id="MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Select Actor</label>
                <select name="ActorId" id="ActorId" class="form-control" asp-items="ViewBag.ActorId"></select>
                <span asp-validation-for="ActorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
